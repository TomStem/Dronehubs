<div class="banner dashboard" style="background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.6)), url(<%= @owner.banner_pic %>);">
  <div class="banner-content">
    <% if @owner.profile_pic.nil? %>
    <%= image_tag "http://placehold.it/300x300", alt: "profile picture" %>
    <% else %>
    <%= cl_image_tag @owner.profile_pic, height: 300, width: 300, crop: :fill %>
    <% end %>
    <h1><%= @owner.first_name %> <%= @owner.last_name %></h1>
    <div class="banner-content-description"><%= @owner.description %></div>
    <div class="banner-content-buttons">
      <%= link_to "Edit your Profile", '#', { class: "btn btn-primary edit-profile", data: { toggle: "modal", target: "#modal-profile"}} %>
      <%= link_to "See your Profile", pilot_path(@owner), class: "btn btn-primary see-profile" %>
    </div>
  </div>
</div>



<div class="tab-box tab-profile">
  <h2 class="subtitle">
   <!--  <a href="#" ><span class="tab active" data-target="#personal">My Profile</span></a> -->
   <a href="#"data-target="#profile_jobs"> <span class="tab active" data-target="#profile_jobs" >My Jobs(<%= @jobs_amount %>)</span></a>
   <!--    <p><%= @jobs_amount %></p> -->
   <a href="#"data-target="#profile_bids"><span class="tab" data-target="#profile_bids">My Bids(<%= @bids_amount %>)</span></a>
   <!--  <p><%= @bids_amount %></p> -->
   <a href="#"><span class="tab" data-target="#profile_drones">My Drones</span></a>
 </h2>

</div>
<div class="wrapper profile-wrapper">
  <div class="container">

    <div class="tab-content" id="profile_jobs">
      <div class="container padded">
        <p>Down here you can see the jobs that accepted your bid</p>
        <table class="table">
          <tr>
            <th>Job title</th>
            <th>Inquirer</th>
            <th>Drone</th>
          </tr>
          <% @jobs.each do |job| %>
          <tr>
            <td><%= job[:job].title %></td>
            <td><%= job[:job].user.first_name %></td>
            <td><%= job[:drone].brand %> <%= job[:drone].model %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class="tab-content hidden" id="profile_bids">
      <div class="container padded">
        <p>Here you can see the bids you made</p>
        <table class="table">
          <tr>
            <th>Amount</th>
            <th>Job title</th>
            <th>Inquirer</th>
            <th>Status</th>
          </tr>
          <% @owner.drones.each do |drone| %>
          <% drone.bids.each do |bid| %>
          <tr>
            <td>â‚¬<%= bid.amount %></td>
            <td><%= bid.job.title %></td>
            <td><%= bid.job.user.first_name %></td>
            <td><%= bid.status %></td>
          </tr>
          <% end %>
          <% end %>
        </table>
      </div>
    </div>

    <div class="tab-content hidden" id="profile_drones">
      <div class="container padded">
        <div class="row">
          <% @owner.drones.each do |drone| %>
          <div class="col-xs-12 col-md-4">
            <div class="thumbnail">
              <% if drone[:photo] == nil %>
              <%= image_tag "http://placehold.it/300x300", size: "300x300", alt: "drone picture" %>
              <% else %>
              <%= cl_image_tag drone.photo, height: 300, width: 300, crop: :fill %>
              <% end %>
              <div class="caption">
                <h3><%= drone.brand %> <%= drone.model %></h3>
                <p>
                  <%= link_to owner_drone_path(drone) do %>
                  <i class="fa fa-search"></i>
                  <% end %>
                  <%= link_to edit_owner_drone_path(drone) do %>
                  <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to owner_drone_path(drone), method: :delete, data: { confirm: "Are you sure you want to delete the #{drone.brand} #{drone.model}?" } do %>
                  <i class="fa fa-trash"></i>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <p><%= link_to "Add a Drone", new_owner_drone_path, { class: "btn btn-success" } %></p>
    </div>

  </div>
</div>
</div>
<%= render 'owner/profiles/modal_edit' %>
