<div class="container padded">

<h2>Add a Drone</h2>

  <%= simple_form_for([ :owner, @drone]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :camera %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>

<% end %>
</div>
