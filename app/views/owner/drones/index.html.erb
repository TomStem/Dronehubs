<h2>My Drones</h2>

<div class="container">
  <div class="row">
    <% @drones.each do |drone| %>
    <div class="col-xs-12 col-md-4">
      <div class="thumbnail">
          <%= image_tag "http://unsplash.it/200/200", size: "200x200" , alt:"drone-picture" %>
        <div class="caption">
          <h3><%= drone.brand %> <%= drone.model %></h3>
          <p>
            <%= link_to "Show", owner_drone_path(drone), { class: "btn btn-primary" } %> <%= link_to "Edit", edit_owner_drone_path(drone), { class: "btn btn-primary " } %> <%= link_to "Delete", owner_drone_path(drone) , method: :delete,
            data: { confirm: "Are you sure you want to delete the #{drone.brand} #{drone.model}?" },
            class: "btn btn-danger" %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "Add a drone", new_owner_drone_path, { class: "btn btn-success" } %>
<%= link_to "Back", owner_profile_path, { class: "btn btn-primary" } %>
