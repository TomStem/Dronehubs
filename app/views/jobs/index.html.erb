<div class="banner-jobs">
  <h1>All currently available jobs</h1>
  <p>Let the bidding begin</p>
</div>
<div class="container text-center">
  <%= link_to "Create a new job", new_inquirer_job_path(@job), { class: "btn btn-primary btn-lg" } %>  
</div>
<div class="container"> 
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="row">
        <div class="col-xs-12">
          <h2>The offers</h2>
        </div>
      </div>
      <hr>
      <% @jobs.each do |job| %>
        <div class="row">
          <div class="col-xs-12 col-sm-2">
            <h4>Created by <%= job.user.first_name %></h4>
            <!-- TODO = job.user_id.first_name " " job.user_id.last_name -->
          </div>
          <div class="col-xs-12 col-sm-6">
            <p><%= job.description %></p>
          </div>
          <div class="col-xs-12 col-sm-3">
            <div class="btn-group" role="group">
                <%= link_to "Go to job",  inquirer_job_path(job), { class: "btn btn-default" } %>
                <%= link_to "Place a bid",  new_job_bid_path(job), { class: "btn btn-default" } %>
            </div>
          </div>
      </div> 
      <% end %>
    </div>
  </div>
</div>