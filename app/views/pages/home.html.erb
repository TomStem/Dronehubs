<div class="banner">
  <div class="banner-content">
    <h1>Connect through the air</h1>
    <p>Hire your neighbour as a pilot or become the pilot yourself!</p>
    <a href="#how" class="btn btn-primary">How it works</a>
    <br><br>
    <!-- Search form -->
    <div class="search">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <%= form_tag(jobs_path, :method => "get", class: "form-section") do %>
              <div class="row">
                <form role="form">
                  <div class="col-md-8">
                    <div class="form-group">
                      <label class="sr-only" for="location">Location</label>
                      <%= text_field_tag :search, params[:search],  placeholder: "Where?", class: "form-control", :input_html => {:minlength => 4 } %>
                    </div>
                  </div>
                  <div class="col-md-2">
                    <div class="form-group">
                      <label class="sr-only" for="choice">What ?</label>
                      <select id="choice" name="what" class="form-control">
                        <option value="pilot">Pilot</option>
                        <option value="job">Job</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-2">
                     <%= submit_tag "Search", class: "btn btn-primary" %>
                  </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container padded">
<div id="how"></div>
 <div class="row padded">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="subtitle"><span>How it works</span></h2>
    </div>
  </div>
