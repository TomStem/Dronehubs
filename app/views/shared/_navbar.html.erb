<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logoDH.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? && current_user.owner %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
       <%= link_to t(".home", default: "Home"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".about", default: "About"), "", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".legislation", default: "Legislation"), "", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".jobs", default: "Pilots"), owners_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".jobs", default: "Jobs"), jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= link_to "", "", class: "fa fa-user navbar-wagon-link dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to owner_profile_path do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      <% elsif user_signed_in? %>

        <!-- Profile picture and dropdown -->
        <%= link_to t(".home", default: "Home"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".about", default: "About"), "", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".legislation", default: "Legislation"), "", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".jobs", default: "Pilots"), owners_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".jobs", default: "Jobs"), jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= link_to "", "", class: "fa fa-user navbar-wagon-link dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to inquirer_jobs_path do %>
                <i class="fa fa-bookmark"></i>  <%= t ".myjobs", default: "My jobs" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".home", default: "Home"), root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".about", default: "About"), "", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".legislation", default: "Legislation"), "", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".jobs", default: "Pilots"), owners_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".jobs", default: "Jobs"), jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>
       <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn btn-primary login" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

